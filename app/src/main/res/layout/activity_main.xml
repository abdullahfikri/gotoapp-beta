<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"

    tools:context=".MainActivity">

    <TableRow

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_weight="1"
            android:id="@+id/ivHospital"
            android:onClick="clickHospital"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/hospital" />

        <ImageView
            android:layout_weight="1"
            android:id="@+id/ivPolice"
            android:onClick="clickPolice"
            android:layout_width="match_parent"
                android:layout_height="200dp"
            app:srcCompat="@drawable/police" />

    </TableRow>
    <TableRow

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_weight="1"
            android:id="@+id/ivMarket"
            android:onClick="clickMarket"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/market" />

        <ImageView
            android:layout_weight="1"
            android:id="@+id/ivShool"
            android:onClick="clickSchool"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/school" />

    </TableRow>

</LinearLayout>
